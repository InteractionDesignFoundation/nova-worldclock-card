{
    "name": "interaction-design-foundation/nova-worldclock-card",
    "description": "A Laravel Nova card to display world clocks",
    "license": "MIT",
    "keywords": [
        "laravel",
        "nova",
        "laravel-nova-card",
        "time",
        "clock",
        "world"
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "laravel/nova": "^4.20 || ^5.0"
    },
    "require-dev": {
        "interaction-design-foundation/coding-standard": "^0.3",
        "orchestra/testbench-core": "^10.0",
        "phpunit/phpunit": "^10.5 || ^11.0 || ^12.0",
        "vimeo/psalm": "^6.0"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com",
            "only": [
                "laravel/nova"
            ]
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "InteractionDesignFoundation\\WorldClockCard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "InteractionDesignFoundation\\WorldClockCard\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "InteractionDesignFoundation\\WorldClockCard\\CardServiceProvider"
            ]
        }
    },
    "scripts": {
        "cs": "@cs:fix",
        "cs:check": "phpcs -p -s --colors --report-full --report-summary",
        "cs:fix": "phpcbf -p --colors",
        "psalm": "cpx psalm",
        "sa": "@psalm",
        "sa:bl": "cpx psalm --set-baseline=psalm-baseline.xml --long-progress --threads=1",
        "test": "phpunit --colors=always"
    }
}
